<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outerview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/npcimage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:contentDescription="@string/npcimage_description"
        android:scaleType="fitCenter"
        android:src="@drawable/missingbitmap" />

    <ScrollView
        android:id="@+id/npc_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_marginBottom="0dip"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_weight="1"
        android:background="@drawable/background_text"
        android:fillViewport="true" >

        <TextView
            android:id="@+id/npctext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/textView_minHeight"
            android:textSize="@dimen/text_size" >
        </TextView>
    </ScrollView>

    <Button
        android:id="@+id/proceedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin"
        android:layout_marginTop="0dip"
        android:background="@drawable/button"
        android:padding="@dimen/button_padding"
        android:textColor="@color/foreground" />

</LinearLayout>